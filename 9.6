#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    int randomMassive[5];
    bool found = false; 

    srand(time(0));
    cout << "Massive before:\n";

    for (int i = 0; i < 5; i++) {
        randomMassive[i] = rand() % 10; 
        cout << randomMassive[i] << " ";
    }

    cout << endl;

    for (int i = 0; i < 5; i++) {
        if (randomMassive[i] == 0) {
            cout << "First zero element found at position: " << i << endl;
            found = true;  
            break;         
        }
    }

    if (!found) {
        cout << "The array does not contain zero elements." << endl;
    }

    return 0;
}
